// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "NVidia Python Basic for AI Workbench",
  "dockerComposeFile": "docker-compose.yml",
	"service": "py-app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "vscode",

  // Optional: Forward the default Jupyter port
  "forwardPorts": [8888],
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/bin/python" // Adjust path as needed
      },
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python" 
      ]
    }
  },
  // Command to run after the container is created, can be used to verify GPU access
  "postCreateCommand": "nvidia-smi"  
}
