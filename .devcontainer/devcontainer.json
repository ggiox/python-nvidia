// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "GPU Jupyter Dev Container",
  "remoteUser": "ubuntu", 
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
    // Optional: Use a specific NVIDIA CUDA image as a base in your Dockerfile
    
  },
  "runArgs": ["--gpus", "all" ],
  // Optional: Forward the default Jupyter port
  "forwardPorts": [8888],
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/bin/python" // Adjust path as needed
      },
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python" 
      ]
    }
  },
  // Command to run after the container is created, can be used to verify GPU access
  "postCreateCommand": "nvidia-smi"  
}
